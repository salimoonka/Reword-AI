# Supabase Configuration
# Copy to config.toml and adjust values

[api]
enabled = true
port = 54321
schemas = ["public"]
extra_search_path = ["public"]
max_rows = 1000

[db]
port = 54322
major_version = 15

[studio]
enabled = true
port = 54323

[auth]
enabled = true
site_url = "exp://localhost:8081" # For development with Expo
additional_redirect_urls = ["reword-ai://auth/callback"]

[auth.email]
enable_signup = true
double_confirm_changes = true
enable_confirmations = false # Disable for development

[auth.external.apple]
enabled = true
client_id = "env(APPLE_CLIENT_ID)"
secret = "env(APPLE_SECRET)"

[storage]
enabled = false # Not needed for initial MVP

[realtime]
enabled = false # Not needed for initial MVP
