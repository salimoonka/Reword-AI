# Normalize line endings to LF for all text files
* text=auto eol=lf

# Explicitly set LF for these file types
*.ts    text eol=lf
*.tsx   text eol=lf
*.js    text eol=lf
*.jsx   text eol=lf
*.json  text eol=lf
*.md    text eol=lf
*.sql   text eol=lf
*.yml   text eol=lf
*.yaml  text eol=lf
*.sh    text eol=lf
*.env   text eol=lf
*.toml  text eol=lf
*.css   text eol=lf
*.html  text eol=lf

